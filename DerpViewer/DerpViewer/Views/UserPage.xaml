<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DerpViewer.Views.UserPage">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection>
                    <EntryCell Label="API Key" Text="{Binding UserAPIKey}" Placeholder="Your API key" />
                    <SwitchCell Text="Using Filter" On="{Binding UsingFilter}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>