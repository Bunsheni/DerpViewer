<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DerpViewer.Views.UserPage">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection>
                    <EntryCell Label="API Key" Text="{Binding UserAPIKey}" Placeholder="Your API key" />
                    <EntryCell Label="Tag Support Count" Text="{Binding TagCount}" Placeholder="Tag Support Count" />
                    <SwitchCell Text="Using Filters" On="{Binding UsingFilter}"/>
                    <SwitchCell Text="Hide Topbar" On="{Binding HideTopbar}"/>
                    <SwitchCell Text="한국어" On="{Binding Korean}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>